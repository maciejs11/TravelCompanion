@using Microsoft.AspNetCore.Identity
@model IEnumerable<IdentityRole>
<div class="row">
    <div class="col-md-8">
        <div class="row" style="margin:auto">
            <h2 style="margin-bottom:2%">Zarządzaj rolami</h2>
            <div class="col-md-1">
                <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary">Dodaj nową rolę</a>
            </div>
        </div>
        
            @if (Model.Any())
            {


                foreach (var role in Model)
                {
        
            <div style="margin-bottom:3%">
                <div class="card">
                    <div class="card-header">
                        ID roli: @role.Id
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@role.Name</h5>
                    </div>
                    <div class="card-footer">
                        <a asp-action="EditRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-primary">Edytuj</a>
                        <a asp-action="DeleteRole" asp-controller="Administration" asp-route-id="@role.Id" class="btn btn-danger"
                            onclick="return confirm('Czy na pewno chcesz usunąć rolę @role.Name')">Usuń</a>
                    </div>
                </div>
            </div>
        
                }
            }
            else
            {
        
            <div class="card">
                <div class="card-header">
                    Nie utworzono jeszcze żadnych ról
                </div>
                <div class="card-body">
                    <h5 class="card-title">
                        Użyj przycisku poniżej aby stworzyć role
                    </h5>
                    <a asp-action="CreateRole" asp-controller="Administration" class="btn btn-primary">Utwórz rolę</a>
                </div>
            </div>
      
            }
           
        </div>
   </div>
