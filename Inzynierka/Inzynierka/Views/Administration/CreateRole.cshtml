@model Inzynierka.ViewModels.CreateRoleViewModel

<h1>Stwórz nową rolę</h1>

<div class="row">
    <div class="col-md-4">
        <form  method="post">           
            
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="RoleName">Nazwa roli</label>
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
            
            <button type="submit" class="btn btn-primary">Stwórz rolę</button>
        </form>
    </div>
</div>