@model Inzynierka.ViewModels.Roles.EditRoleViewModel

<h2>Edytuj rolę</h2>

<form method="post" class="mt-3">
    <div class="col-md-8">
        <div class="form-group row">
            <label asp-for="Id" class="col-sm-2 col-form-label"></label>
            <div class="col-sm-10">
                <input asp-for="Id" disabled class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="RoleName" class="col-sm-2 col-form-label">Nazwa roli</label>
            <div class="col-sm-10">
                <input asp-for="RoleName" class="form-control" />
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        </div>

        <div asp-validation-summary="All" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-sm-10">
                <button type="submit" class="btn btn-primary">Zaktualizuj</button>
                <a asp-action="ListRoles" class="btn btn-danger">Anuluj</a>
            </div>
        </div>

        <div class="card">
            <div class="card-header">
                <h3>Użytkownicy posiadający tą rolę</h3>
            </div>
            <div class="card-body">
                @if (Model.Users.Any())
                {
                    foreach (var user in Model.Users)
                    {
                        <h5 class="card-title">@user</h5>
                    }
                }
                else
                {
                    <h5>Nie ma w tym momencie żadnych użytkowników</h5>
                }
            </div>
            <div class="card-footer">
                <a href="#" class="btn btn-primary">Dodaj użytkownika</a>
                <a href="#" class="btn btn-danger">Usuń użytkownika</a>
            </div>
        </div>
    </div>
</form>


