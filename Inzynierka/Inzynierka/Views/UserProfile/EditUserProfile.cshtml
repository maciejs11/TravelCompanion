@model Inzynierka.Models.ApplicationUsers.ApplicationUser

<div class="row">
    <div class="col-md-4">
        <form method="post">

            <h2>Edytuj swój profil</h2>

            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FirstName">Imię</label>
                <input asp-for="FirstName" class="form-control" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LastName">Nazwisko</label>
                <input asp-for="LastName" class="form-control" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age">Wiek</label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="About">O sobie</label>
                <textarea asp-for="About" class="form-control"></textarea>
                <span asp-validation-for="About" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Płeć</label>
                <select asp-for="Gender" class="form-control">
                    <option value="Mężczyzna">Mężczyzna</option>
                    <option value="Kobieta">Kobieta</option>
                    <option value="Inna">Inna</option>
                </select>
                <span asp-validation-for="Gender" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Zapisz</button>
            <a asp-action="Index" class="btn btn-secondary">Anuluj</a>
        </form>
        <div style="margin-top:15%">
            <h4>Usuwanie konta</h4>
            <form asp-controller="UserProfile" asp-action="DeleteAccount" method="post">
                <span id="confirmDeleteSpan_@Model.Id" style="display:none">
                    <span>Czy na pewno chcesz usunąć?</span>
                    <button type="submit" class="btn btn-danger">Tak</button>
                    <span class="btn btn-primary"
                          onclick="confirmDelete('@Model.Id', false)">Nie</span>
                </span>
                <span id="deleteSpan_@Model.Id">
                    <span class="btn btn-danger"
                          onclick="confirmDelete('@Model.Id', true)">Usuń</span>
                </span>
            </form>
        </div>
    </div>
</div>